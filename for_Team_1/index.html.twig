{% extends 'base.html.twig' %}

{% block content %} 
 
 <div class="header">
      <h2>CRUD App</h2>
      <form action="{{path('create_task')}}" method="post" style="display:inline">
        <input type="text" name="id" id="taskInput" placeholder="Task ID" style="display:inline"/>
        <input type="text" name="title" id="myInput" placeholder="Task title..." style="display:inline"/>
        <button type="submit" class="addBtn">Add / Edit task</button>
        {# <button type="submit" class="addBtn">Add a task</button> #}
      </form>
    </div>

    <ul>

{% for task in tasks %}
      <li {% if task.status %} class="checked"{% endif %}>
      {# <input type=text value="hjshdjsdhs"> #}
      {# <span>{{task.id}}</span> #}
        <a href="{{path('update_task', {'id': task.id})}}"> <span class="task-list-item">{{task.id}}<span> <span/>{{task.title}} </span> </a
        ><a onclick="return confirm('Are you sure to delete?')" href="{{path('delete_task', {'id': task.id})}}"><span class="close">X</span></a>
      </li>
     {% endfor %}
    </ul>

    {% endblock %}